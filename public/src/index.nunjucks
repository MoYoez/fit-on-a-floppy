{% extends '_layouts/base.nunjucks' %}

{% block content %}
<div class="section values">
    <div class="container">
      <div class="row">
        <div class="two-thirds column value">
            <h1>Fit on a Floppy</h1>
            <strong>1.44mb</strong> <span>Floppy Disk capacity</span>
            <p>

            </p>
        </div>
        <div class="one-third column value">
            <img src="./images/floppy.jpg" alt="Single Floppy Disk" class="u-max-full-width" />
        </div>
      </div>
      <hr/>
      <div class="row">
        <form onsubmit="onSubmit(event)">
            <div class="row">
              <h2>Will it fit?</h2>
            </div>
            <div class="row">
              <div class="two columns">
                  <select id="protocol" name="protocol" class="u-full-width" >
                    <option value="https">https://</option>
                    <option value="http">http://</option>
                  </select>
              </div>
              <div class="seven columns">
                <input class="u-full-width" placeholder="Website" id="website" name="website" type="url" />
              </div>
              <div class="three columns">
                  <input class="button-primary u-full-width" type="submit" value="Go!" />
              </div>
            </div>
          </form>
      </div>
      <hr/>
      <div id="outputRow" class="row">
          <div id="output" class="twelve columns">
          </div>
      </div>
    </div>
  </div>
{% endblock %}
